{% extends '::base.html.twig' %}

{% block title %}{% block forum_title %}Forums{% endblock %}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	
	{% block forum_stylesheets %}
		<style>
		   div.forum_container {
		      width: 80%;
		      max-width: 1024px;
		      margin: 20px auto;
		   }
		
		    ul.breadcrumb { 
		        list-style-type: none;
		        margin: 0;
		        padding: 0;
		    }
		        ul.breadcrumb li {
		            display: inline;
			        margin: 0;
			        padding: 0;
		        }

		    ul.forums {
		        list-style-type: none;
		        margin: 0;
		        padding: 0;
		    }
		        ul.forums li.forum {
		        }

		    ul.topics {
		        list-style-type: none;
		        margin: 0;
		        padding: 0;
		    }
		        ul.topics li.topic {
		        }
		        
	        textarea {
	           width: 100%;
	        }
		</style>
	{% endblock forum_stylesheets %}
{% endblock stylesheets%}

{% block body %}
    
    <header>
        <h1>Courtyard <small>a forum suite built on Symfony</small></h1>
    </header>
    
    {% block forum_crumbs %}{{ wo_render_breadcrumbs() }}{% endblock %}
    <div class="forum_container">{% block forum_content %}{% endblock %}</div>
{% endblock body %}