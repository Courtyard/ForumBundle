{% extends 'CourtyardForumBundle::Forum.html.twig' %}

{% block forum_title %}{{ topic.title }}{% endblock %}

{% block forum_content %}
	<h1>{{ topic.title }}</h1>
	{% for post in posts %}
	    <div class="post">
	        {% if post.title %}
	            <h3>{{ post.title }}</h3>
	        {% endif %}
	        <p>{{ post.message }}</p>

            <a href="{{ generatePostUrl(post) }}">#{{ post.number }}</a>:
            <a href="{{ generatePostEditUrl(post) }}">Edit Post</a>
            {% if post.number > 1 %} -
                <a href="{{ generatePostDeleteUrl(post) }}">Delete Post</a>
            {% endif %}
	        <hr>
	    </div>
	{% endfor %}

	{% if form %}
	   {% include "CourtyardForumBundle:Posts:reply-inline.html.twig" %}
	{% endif %}
{% endblock forum_content %}